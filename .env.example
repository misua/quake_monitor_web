# Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True

# Location Settings
LATITUDE=7.190708
LONGITUDE=125.455338
LOCATION_NAME=Davao City, Philippines

# Update Intervals (in seconds)
WEATHER_UPDATE_INTERVAL=30
EARTHQUAKE_UPDATE_INTERVAL=60
MONITORING_UPDATE_INTERVAL=300

# API Keys
STORMGLASS_API_KEY=your_stormglass_api_key_here

# Grafana Cloud Profiles (Pyroscope) - Continuous Profiling
# Set PROFILING_ENABLED=true to enable profiling
# Get credentials from: https://grafana.com/orgs/your-org → Your Stack → Profiles → Details
PROFILING_ENABLED=false
PYROSCOPE_SERVER_URL=https://profiles-prod-XXX.grafana.net
PYROSCOPE_USERNAME=your-username
PYROSCOPE_API_KEY=your-api-key
ENVIRONMENT=production
